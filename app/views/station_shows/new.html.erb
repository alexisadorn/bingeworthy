<h1>Add <%= @station_show.show.title %> to Your Station</h1>
<%= form_for @station_show do |f| %>
  <%= f.label :station %>
  <%= f.collection_select :station_id, current_user.stations.order('name ASC'), :id, :name, :include_blank => true %><br>
  <%= f.label :user_status %>
  <%= f.text_field :user_status %><br>
  <%= f.label :user_season %>
  <%= f.number_field :user_season %><br>
  <%= f.check_box :fav %> Fav? <br>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :show_id, value: @station_show.show.id %>
  <%= f.submit %>
<% end %>
