<%= form_for(station) do |f| %>

  <% if station.errors.any? %>
    <ul>
    <% station.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit %>

<% end %>
