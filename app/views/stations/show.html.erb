<h1><%= @station.name %></h1>
<p><em><%= @station.description %></em></p>
<ul>
  <% @station.station_shows.each do |station_show| %>
    <li><%= link_to station_show.show.title, show_path(station_show.show) %><br>
        Status: <%= station_show.user_status %><br>
        Season You're On: <%= station_show.user_season %></li>
  <% end %>
</ul>
<button>Add Shows</button><!-- Nested Resource use here?? Add a show but from stations/:station_id/show -->
<%= link_to "Edit My Station", edit_station_path(@station) %>
<%= form_tag(station_path, method: "delete") do %>
<%= submit_tag "Shut Down Station" %>
<% end %>
<%= link_to "Back to My Stations", stations_path %>
