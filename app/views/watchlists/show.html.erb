<h1><%= @watchlist.name %></h1>
<p><em><%= @watchlist.description %></em></p>
<ul>
  <% @watchlist.shows.each do |show| %>
    <li><%= link_to show.title, show_path(show) %></li>
  <% end %>
</ul>
<%= link_to "Add Show to Watchlist", shows_path %><br>
<%= link_to "Edit My Watchlist", edit_watchlist_path(@watchlist) %><br>
<%= link_to "Back to My Watchlists", watchlists_path %>
<%= form_tag(watchlist_path, method: "delete") do %>
<%= submit_tag "Delete Watchlist" %>
<% end %>
