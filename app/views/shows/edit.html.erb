<h1>Edit <%= @show.title %></h1>
<% if @show.errors.any? %>
  <ul>
  <% @show.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<%= form_for(@show) do |f| %>
  <% if @listing.present? %>
    <h1><%= @show.title %></h1>
    <p><%= @show.description %></p>
    <p><strong>Genres:</strong>
      <ul>
      <% @show.genres.each do |genre| %>
        <li><%= link_to genre.name, genre_path(genre) %></li>
      <% end %>
      </ul>
    </p>
    <p><strong>Channel: </strong><%= link_to @show.channel.name, channel_path(@show.channel) %></p>
    <p><strong>Day: </strong><%= @show.day %></p>
    <p><strong>Time: </strong><%= @show.time %></p>
    <p><strong>Current Season: </strong><%= @show.current_season %></p>
    <hr>
    <br><strong>Update Watchlist Details:</strong><br>
    <%= f.fields_for :listings, @listings do |listing_form| %>
      Editing Fields For <%= @listings.watchlist.name %> Watchlist<br>
      <%= listing_form.label "Your Viewing Status" %>
      <%= listing_form.text_field :user_status %><br>
      <%= listing_form.label "What Season Are You On" %>
      <%= listing_form.number_field :user_season %><br>
      <%= listing_form.check_box :fav %> Fav? <br>
      <%= listing_form.hidden_field :user_id, value: current_user.id %>
      <%= listing_form.hidden_field :watchlist_id, value: @listings.watchlist.id %>
    <% end %>
  <% else %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label "Show Description" %>
    <%= f.text_area :description %><br>
    <%= f.label :channel %>
    <%= f.collection_select :channel_id, Channel.order('name ASC'), :id, :name, :include_blank => true %> or <br>
    Create a new channel:
    <%= f.fields_for :channel_attributes do |channel_fields| %>
      <%= channel_fields.text_field :name %>
    <% end %>
    <br>
    <%= f.label :day %>
    <%= f.select(:day, options_for_select(['Mon', 'Tue', 'Wed', 'Thur', 'Fri', 'Sat', 'Sun']), { include_blank: true }) %>
    <br>
    <%= f.label :time %>
    <%= f.text_field :time %><br>
    <%= f.label :current_season %>
    <%= f.number_field :current_season %><br>
    <%= f.label :genre %><br>
    <%= f.collection_check_boxes :genre_ids, Genre.order('name ASC'), :id, :name %> <br>
    Create a new genre:
    <%= f.fields_for :genres, @show.genres.build do |genre_fields| %>
      <%= genre_fields.text_field :name %>
    <% end %>
  <% end %>
<br>
<br>
<%= f.submit %>
<% end %>
