<%= form_for(show) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label "Show Description" %>
  <%= f.text_area :description %><br>

  <%= f.label :channel %>
  <%= f.collection_select :channel_id, Channel.order('name ASC'), :id, :name, :include_blank => true %> or <br>
  Create a new channel:
  <%= f.fields_for :channel_attributes do |channel_fields| %>
    <%= channel_fields.text_field :name %>
  <% end %>
  <br>

  <%= f.label :day %>
  <%= f.select(:day, options_for_select(['Mon', 'Tue', 'Wed', 'Thur', 'Fri', 'Sat', 'Sun']), { include_blank: true }) %>
  <br>

  <%= f.label :time %>
  <%= f.text_field :time %><br>

  <%= f.label :current_season %>
  <%= f.number_field :current_season %><br>

  <%= f.label :genre %><br>
  <%= f.collection_check_boxes :genre_ids, Genre.order('name ASC'), :id, :name %> <br> or
  Create a new genre:
  <%= f.fields_for :genres, show.genres.build do |genre_fields| %>
    <%= genre_fields.text_field :name %>
  <% end %>
  <%= f.hidden_field :created_by, value: current_user.id %>
  <hr>
  <%= f.submit %>
<% end %>
