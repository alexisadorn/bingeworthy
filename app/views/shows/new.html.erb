<h1>Create a New Show</h1>
<%= form_for(@show) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label "Show Description" %>
<%= f.text_area :description %><br>
<%= f.label :channel %>
<%= f.collection_select :channel_id, Channel.all, :id, :name, :include_blank => true %> or <br>
Create a new channel: <%= f.text_field :channel %><br>
<%= f.label :day %>
<!-- TODO: Lookup cleaner way to show Day drop-down -->
<select name="show[day]" id="show_day">
  <option value=""></option>
  <option value="Mon">Monday</option>
  <option value="Tue">Tuesday</option>
  <option value="Wed">Wednesday</option>
  <option value="Thur">Thursday</option>
  <option value="Fri">Friday</option>
  <option value="Sat">Saturday</option>
  <option value="Sun">Sunday</option>
</select>
<br>
<%= f.label :time %>
<%= f.text_field :time %><br>
<%= f.label :current_season %>
<%= f.number_field :current_season %><br>
<%= f.label :genre %><br>
<%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %> or <br>
Create a new genre: <%= f.text_field :genres %>
<br>
<br>
<%= f.submit %>
<% end %>
